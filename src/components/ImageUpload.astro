<li class="card">
  <div class="flex-center">
    <h2>Upload your image here</h2>

    <label for="file">Choose a picture to upload:</label>
    <input
      type="file"
      id="file"
      name="file"
      accept="image/png, image/jpeg, image/gif, image/webp"
    />
    <button class="upload-button">Upload</button>
  </div>
</li>

<script>
  const baseUrl = import.meta.env.PUBLIC_API_BASE_URL;
  const imageUrl = `${baseUrl}api/image/scale`;
  const gifUrl = `${baseUrl}api/gif/scale`;

  const fileInput = document.getElementById("file") as HTMLInputElement;
  const uploadButton = document.querySelector(
    ".upload-button"
  ) as HTMLButtonElement;

  uploadButton.addEventListener("click", async () => {
    const file = fileInput.files?.[0];
    if (!file) {
      alert("Please select a file to upload");
      return;
    }

    const formData = new FormData();
    formData.append("file", file);

    const whatIsAGifArray = ["image/gif", "image/webp"];

    const requestUrl = whatIsAGifArray.includes(file.type) ? gifUrl : imageUrl;

    console.debug(`Uploading image to ${requestUrl}`);

    const response = await fetch(requestUrl, {
      method: "POST",
      body: formData,
    });

    if (response.status === 429) {
      alert("429 - Too many requests. Please try again later.");
      return;
    }

    if (response.status === 413) {
      alert("413 - File too large. Please upload a smaller file. (Max: 1MB)");
      return;
    }

    if (!response.ok) {
      alert(`Failed to upload image, error: ${await response.json()}`);
      return;
    } else {
      alert("Image uploaded successfully");

      // clear the input field
      fileInput.value = "";
    }
  });
</script>

<style lang="less">
  .card {
    list-style: none;
    padding: 2rem;
    background-color: #23262d;
    border-radius: 7px;
    background-position: 100%;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .flex-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .upload-button {
    background-color: #f1f1f1;
    color: #23262d;
    padding: 0.5rem 1rem;
    border-radius: 7px;
    border: none;
    cursor: pointer;

    &:hover {
      transition: background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      background: linear-gradient(
        to right,
        #6666ff,
        #0099ff,
        #00ff00,
        #ff3399,
        #6666ff
      );
      animation: rainbow_animation 3s ease-in-out infinite;
      color: white;

      background-size: 400% 100%;
    }
  }

  @keyframes rainbow_animation {
    0%,
    100% {
      background-position: 0 0;
    }

    50% {
      background-position: 100% 0;
    }
  }
</style>
